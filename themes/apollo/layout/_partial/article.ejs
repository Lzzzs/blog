<article id="<%= post.layout %>-<%= post.slug %>" class="post">
  <header class="entry-meta-header">
    <span class="meta-elements date">
      <%- partial('post/date', {class_name: 'article-date', date_format: config.date_format}) %>
    </span>
    <span class="meta-elements author"><%= config.author %></span>
    <div class="commentscount">
      <% if (post.comments && config.disqus_shortname) { %>
        <a href="<%- post.permalink %>#disqus_thread" class="article-comment-link"><%= __('article.comments') %></a>
      <% } %>
    </div>
  </header>
  <%- partial('post/gallery') %>
  <header class="entry-header">
    <%- partial('post/title', {class_name: 'article-title'}) %>
  </header>
  <div class="entry-content">
    <% if (post.excerpt && index) { %>
      <%- post.excerpt %>
      <% if (theme.more_link) { %>
        <p class="more">
          <a href="<%- url_for(post.path) %>#more"><%= __('article.read_more') %></a>
        </p>
      <% } %>
    <% } else { %>
      <%- post.content %>
    <% } %>
  </div>
  <footer class="entry-footer">
    <div class="entry-meta-footer">
      <span class="category">
        <%- partial('post/category') %>
      </span>
      <span class="tags">
        <%- partial('post/tag') %>
      </span>
    </div>
  </footer>
  <% if (!index) { %>
    <%- partial('post/nav') %>
  <% } %>
</article>

<% if (index) { %>
  <hr class="article-divider">
<% } %>

<% if (!index && post.comments && config.disqus_shortname) { %>
  <section id="comments">
    <div id="disqus_thread">
      <noscript>Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    </div>
  </section>
<% } %>
